<%- include('header')%>
<div class="container">
  <h2 class="text-center mt-3 mb-3">User data</h2>
  <div class="table-responsive">
    <% if(users != ''){ %>
    <table class="table table-responsive">
      <thead class="bg-dark text-light text-center">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Image</th>
          <th scope="col">Name</th>
          <th scope="col">city</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody class="text-center">
        <% users.forEach((row, index)=>{ %>
        <tr class="align-middle">
          <td><%= index+1 %></td>
          <td>
            <img
              src="<%= row.image %>"
              width="50"
              class="img-thumbnall"
              alt="image"
            />
          </td>
          <td><%= row.name %></td>
          <td><%= row.city %></td>
          <td>
            <!-- <a href="/edit/<%= row._id %>" class="text-success"
              ><i class="fas fa-edit fs-lg mx-1"></i
            ></a> -->
            <a href="/delete/<%= row._id %>" class="text-danger"
              ><i class="fas fa-trash fs-lg mx-1"></i
            ></a>
            <a href="/show/<%= row._id %>" class="text-primary"
              ><i class="fas fa-eye fs-lg mx-1"></i
            ></a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% }else{ %>
    <h1 class="text-center text-secondary mt-5">
      No user found in the database
    </h1>
    <% } %>
  </div>
</div>
<%- include('footer')%>
